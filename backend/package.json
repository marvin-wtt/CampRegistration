{
  "name": "@camp-registration/api",
  "version": "0.0.1",
  "description": "An API for camp registrations",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./build/ && rm -rf ./node_modules/",
    "build": "prisma generate && tsc && tsc-alias && npm run build:views",
    "build:views": "mkdir -p ./build/views/emails/ && mjml ./src/views/templates/emails/* -o ./build/views/emails/",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
    "migrate": "npm run db:migrate",
    "db:migrate": "prisma migrate deploy",
    "test": "npm run test:int",
    "test:int": "vitest -c ./vitest.config.integration.ts",
    "test:int:ui": "./scripts/run-integration.sh --ui",
    "lint": "eslint src",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,md,json}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,ts,md,json}\" --ignore-path .gitignore",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "dev": "npm run dev:views & npm run dev:serve",
    "dev:views": "mjml --watch ./src/views/templates/emails/* -o ./src/views/emails/ ",
    "dev:serve": "dotenv -e env.dev cross-env NODE_PATH=./src NODE_ENV=development nodemon src/index.ts",
    "production": "cross-env NODE_ENV=development node build/index.js"
  },
  "prisma": {
    "seed": "ts-node prisma/seeders/index.ts"
  },
  "keywords": [],
  "author": "marvin-wtt <31454580+marvin-wtt@users.noreply.github.com>",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marvin-wtt/CampRegistration",
    "directory": "backend"
  },
  "dependencies": {
    "@camp-registration/common": "file:../common",
    "@camp-registration/web": "file:../frontend",
    "@joi/date": "^2.1.0",
    "@prisma/client": "^5.5.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "countries-list": "^3.0.6",
    "croner": "^7.0.1",
    "dotenv": "^16.1.3",
    "dotenv-cli": "^7.2.1",
    "eslint-plugin-security": "^1.7.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "express-rate-limit": "^7.0.1",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.1.1",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "i18next": "^23.7.3",
    "joi": "^17.9.2",
    "joi-password-complexity": "^5.1.0",
    "mjml": "^4.14.1",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.3",
    "nodemailer-express-handlebars": "^6.1.0",
    "passport": "^0.7.0",
    "passport-anonymous": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "qs": "^6.11.2",
    "survey-core": "^1.9.122",
    "ulidx": "^2.0.0",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {

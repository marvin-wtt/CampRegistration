{
  "name": "@camp-registration/api",
  "version": "0.0.1",
  "type": "module",
  "description": "An API for camp registrations",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./build/ && rimraf ./node_modules/",
    "build": "prisma generate && tsc && tsc-alias && cp ./src/entry.cjs ./build/ && npm run build:views",
    "build:views": "mkdirp ./build/views/emails/ && mjml src/views/emails/**/*.mjml -o ./build/views/emails/",
    "migrate": "npm run db:migrate",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "npx prisma db push --force-reset --accept-data-loss",
    "db:truncate": "tsx prisma/scripts/truncate.ts",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "test": "npm run test:int",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
    "test:int": "vitest -c ./vitest.config.integration.ts",
    "test:int:ui": "./scripts/run-integration.sh --ui",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"**/*.{js,ts,md,json}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,ts,md,json}\" --ignore-path .gitignore",
    "dev": "npm run dev:views && npm run dev:serve",
    "dev:views": "mjml src/views/emails/**/*.mjml -o ./src/views/emails/",
    "dev:serve": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "production": "NODE_ENV=production node build/entry.cjs"
  },
  "prisma": {
    "seed": "tsx prisma/seeders/index.ts"
  },
  "keywords": [],
  "author": "marvin-wtt <31454580+marvin-wtt@users.noreply.github.com>",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marvin-wtt/CampRegistration",
    "directory": "backend"
  },
  "engines": {
    "node": "^22"
  },
  "imports": {
    "#app/*": "./src/app/*.js",
    "#assets/*": "./src/assets/*.js",
    "#config/*": "./src/config/*.js",
    "#core/*": "./src/core/*.js",
    "#guards/*": "./src/guards/*.js",
    "#i18n/*": "./src/i18n/*.js",
    "#jobs/*": "./src/jobs/*.js",
    "#middlewares/*": "./src/middlewares/*.js",
    "#routes/*": "./src/routes/*.js",
    "#utils/*": "./src/utils/*.js",
    "#views/*": "./src/views/*.js",
    "#types/*": "./src/types/*.js"
  },
  "dependencies": {
    "@camp-registration/common": "*",
    "@camp-registration/web": "*",
    "@prisma/client": "^6.7.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "croner": "^8.1.2",
    "csrf-csrf": "^4.0.0",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^7.4.4",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "i18next": "^25.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.10.1",
    "otpauth": "^9.4.0",
    "passport": "^0.7.0",
    "passport-anonymous": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "prisma-extension-soft-delete": "^2.0.1",
    "survey-core": "^2.0.7",
    "ulidx": "^2.4.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.3",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@faker-js/faker": "^9.7.0",
    "@types/async-lock": "^1.4.2",
    "@types/bcryptjs": "^2.4.3",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.14",
    "@types/express": "^5.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/mjml": "^4.7.4",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.6.0",
    "@types/nodemailer": "^6.4.10",
    "@types/passport": "^1.0.16",
    "@types/passport-anonymous": "^1.0.5",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-plugin-security": "^3.0.1",
    "html-entities": "^2.6.0",
    "mjml": "^5.0.0-alpha.4",
    "mkdirp": "^3.0.1",
    "nodemailer-mock": "^2.0.8",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "prisma-json-types-generator": "^3.3.1",
    "rimraf": "^5.0.10",
    "smtp-tester": "^2.1.0",
    "supertest": "^7.1.0",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.1.2",
    "vitest-mock-extended": "^3.1.0"
  }
}

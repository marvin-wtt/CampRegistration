<mjml>
  <mj-head>
    <mj-preview>
      {{{t 'manager:email.invitation.preview' this }}}
    </mj-preview>
    <mj-attributes>
      <mj-all font-family="Montserrat, Helvetica, Arial, sans-serif"></mj-all>
    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-section>
    </mj-section>
    <mj-section background-color="#F2F2F2" padding="20px 0 20px 0">
      <mj-column>
        <mj-text align="center" font-size="20px" font-weight="300">{{{t 'appName' }}}</mj-text>
      </mj-column>
    </mj-section>
    <mj-section background-color="#F2F2F2" padding="0">
      <mj-column>
        <mj-divider border-color="#338d8e"></mj-divider>
      </mj-column>
    </mj-section>
    <mj-section background-color="#F2F2F2" mj-class="main-section">
      <mj-column vertical-align="middle" width="100%">
        <mj-text mj-class="big-text">{{{t 'manager:email.invitation.text.title' this }}}</mj-text>
        <mj-text mj-class="text">{{{t 'manager:email.invitation.text.information' this }}}</mj-text>
        <mj-button color="#ffffff" background-color="#338d8e" mj-class="btn" href="{{ url }}">
          {{{t 'manager:email.invitation.text.button' this }}}
        </mj-button>
        <mj-text mj-class="text">
          {{{t 'manager:email.invitation.text.greeting' this }}}
          <br>
          {{{t 'manager:email.invitation.text.teamName' this }}}
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-raw>

    </mj-raw>
    <mj-section mj-class="bottom-section">
      <mj-column vertical-align="middle" width="70%">
        <mj-text align="center" mj-class="small-text">
          {{{t 'email:footer.sentTo' this }}}
          <br>
          {{{t 'manager:email.invitation.footer.cause' this }}}
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
